<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/profile_icon"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/day_profile_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/profile_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_char"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/profile_icon"
        app:layout_constraintEnd_toEndOf="@id/profile_icon"
        app:layout_constraintStart_toStartOf="@id/profile_icon"
        app:layout_constraintTop_toTopOf="@id/profile_icon"
        tools:text="M" />

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Miguel's 16th Birthday!" />

</androidx.constraintlayout.widget.ConstraintLayout>